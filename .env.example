# Legacy Vite -> Next.js env mapping
# VITE_SUPABASE_URL            -> NEXT_PUBLIC_SUPABASE_URL
# VITE_SUPABASE_PUBLISHABLE_KEY-> NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY
# VITE_SUPABASE_PROJECT_ID     -> NEXT_PUBLIC_SUPABASE_PROJECT_ID (optional metadata)
# VITE_DEV_BYPASS_EMAIL        -> NEXT_PUBLIC_DEV_BYPASS_EMAIL

# Client-exposed variables (safe to expose)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-supabase-anon-key
NEXT_PUBLIC_SUPABASE_PROJECT_ID=your-project-ref
NEXT_PUBLIC_DEV_BYPASS_EMAIL=

# Server-only secrets (never prefix with NEXT_PUBLIC_)
SUPABASE_SERVICE_ROLE_KEY=
OPENROUTER_API_KEY=
PAYPAL_CLIENT_SECRET=
UPSTASH_REDIS_REST_TOKEN=

# Supabase Edge Function runtime env (server-side only)
OPENROUTER_REFERER=
OPENROUTER_TITLE=SyncTeamAI Conference

# Dev flags
NEXT_PUBLIC_BYPASS_PAYWALL=true
